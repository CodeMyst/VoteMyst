@using VoteMyst.Database
@using VoteMyst.Database.Models
@{
    ViewData["Title"] = "Vote";
    Layout = "_Layout";

    Entry[] entries = Enumerable.Range(0, 8)
        .Select(i => new Entry {
            EntryId = i,
            EventId = 0,
            UserId = 0,
            SubmitDate = DateTime.Today.AddDays(i),
            Content = "/examples/ex01.png",
            EntryType = EntryType.File 
        }).ToArray();

    Random rnd = new Random();
}

<div class="post-display-options">
    <div id="post-display-option-large"><img src="/img/post-display-large.svg"/></div>
    <div id="post-display-option-middle"><img src="/img/post-display-middle.svg"/></div>
    <div id="post-display-option-small"><img src="/img/post-display-smallest.svg"/></div>
</div>

<div class="posts">
@foreach (Entry e in entries.OrderBy(_ => rnd.Next()))
{
    @await Component.InvokeAsync("Entry", new { entry = e, displayUser = true });
}
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/entry-grid.js"></script>
}