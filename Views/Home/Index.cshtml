@using VoteMyst.Database

@model FeaturedEvents
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<div class="events">
    @if (Model.TopOngoingEvents.Length + Model.RecentUpcomingEvents.Length == 0)
    {
        <div class="no-events">
            <h1>It's empty here ...</h1>
            <p>Currently, there are no events happening or planned.</p>
            <p>Check back later to see if that has changed!</p>
        </div>
    }
    else
    {
        if (Model.TopOngoingEvents.Length > 0)
        {
            <h1>Top Ongoing Events</h1>
    
            foreach (Event e in Model.TopOngoingEvents)
            {
                <partial name="_EventInfo" for="@e" />
            }
    
            <div class="view-all-events">
                <a href="/events">View all the events!</a>
            </div>
        }
    
        if (Model.TopOngoingEvents.Length > 0 && Model.RecentUpcomingEvents.Length > 0)
        {
            <hr>
        }
    
        if (Model.RecentUpcomingEvents.Length > 0)
        {
            <h1>Upcoming Events</h1>
    
            foreach (Event e in Model.RecentUpcomingEvents)
            {
                <partial name="_EventInfo" for="@e" />
            }
    
            <div class="view-all-events">
                <a href="/events">View all the events!</a>
            </div>
        }
    }
</div>