@using VoteMyst.Database.Models
@{
    ViewData["Title"] = "Vote";
    Layout = "_Layout";

    Event e = ViewBag.Event;
}

@section ContentMeta
{
    <meta property="og:title" content="@Model.Title" />
    <meta property="og:description" content="@Model.Description" />
    <meta property="og:image" content="/img/trophy.png" />
}

<partial name="_EventPageHeader" for="@e" />

<div class="post-display-options">
    <div id="post-display-option-large"><img src="/img/post-display-large.svg"/></div>
    <div id="post-display-option-middle"><img src="/img/post-display-middle.svg"/></div>
    <div id="post-display-option-small"><img src="/img/post-display-smallest.svg"/></div>
</div>

<div class="posts" event-id="@ViewBag.Event.EventId">
@foreach (Entry entry in ViewBag.RandomizedEntries)
{
    <partial name="_Entry" for="@entry" />
}
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/entry-grid.js"></script>
    <script type="text/javascript" src="~/js/entry.js"></script>
}